<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ManHinhDangKyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <EditText
            android:id="@+id/truongEmailDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/truongHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và Tên"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/truongMatKhauDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/truongXacNhanMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận Mật khẩu"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/checkboxDieuKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi đã hiểu các điều khoản và chính sách."
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/nutDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/lienKetDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã có tài khoản? Đăng nhập"/>

    </LinearLayout>
</ScrollView>
