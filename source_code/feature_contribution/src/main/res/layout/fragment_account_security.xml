<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#27AE60"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/header_bg"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài khoản và bảo mật"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_bg">

        <LinearLayout
            android:id="@+id/item_personal_info"
            style="@style/SettingsItemStyle">
            <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_person" />
            <TextView style="@style/SettingsTextStyle" android:text="Thông tin cá nhân" />
            <ImageView style="@style/SettingsArrowStyle" android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_email_phone"
            style="@style/SettingsItemStyle">
            <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_email" />
            <TextView style="@style/SettingsTextStyle" android:text="Email và số điện thoại" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa cập nhật"
                android:textColor="#757575"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>
            <ImageView style="@style/SettingsArrowStyle" android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_change_pass"
            style="@style/SettingsItemStyle">
            <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_lock" />
            <TextView style="@style/SettingsTextStyle" android:text="Đổi mật khẩu" />
            <ImageView style="@style/SettingsArrowStyle" android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_security"
            style="@style/SettingsItemStyle">
            <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_security" />
            <TextView style="@style/SettingsTextStyle" android:text="Đăng nhập và bảo mật" />
            <ImageView style="@style/SettingsArrowStyle" android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_delete_account"
            style="@style/SettingsItemStyle"
            android:layout_marginTop="24dp">
            <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_warning" app:tint="#E74C3C"/>
            <TextView style="@style/SettingsTextStyle" android:text="Yêu cầu xóa tài khoản" android:textColor="#E74C3C"/>
            <ImageView style="@style/SettingsArrowStyle" android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>